<div id="login" class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <!-- Default form login -->
      <form class="text-center p-5" action="#!">
        <h2 class="mb-4 font-weight-bold text-secondary">
          Welcome to Budgeteer
        </h2>

        <!-- Email -->
        <input
          type="text"
          id=""
          class="form-control mb-4 bg-info input-shadow"
          placeholder="Username"
        />

        <!-- Password -->
        <input
          type="password"
          id=""
          class="form-control mb-4 bg-info input-shadow"
          placeholder="Password"
        />

        <div class="d-flex justify-content-around">
          <div>
            <!-- Forgot password -->
            <a class="text-primary" href="">Forgot password?</a>
          </div>
        </div>

        <!-- Sign in button -->
        <button class="btn btn-secondary my-4 text-info" type="submit">Login</button>

        <!-- Register -->
        <p class="text-secondary">
          Not a member?
          <a class="text-primary" href="">Register</a>
        </p>
      </form>
    </div>
  </div>
</div>
